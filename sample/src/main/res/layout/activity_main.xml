<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <com.stefanosiano.powerfullibraries.imageview.PowerfulImageView
        android:layout_width="280dp"
        android:layout_height="250dp"
        android:layout_margin="8dp"
        app:piv_shape_scaleType="centerCrop"
        android:padding="10dp"
        android:background="@color/colorPrimary"


        app:piv_shape_mode="circle"
        app:piv_shape_background="@color/colorPrimaryDark"
        app:piv_shape_border_width="10dp"
        app:piv_shape_border_color="#90000000"
        app:piv_shape_border_overlay="false"
        app:piv_shape_radius_x="180"
        app:piv_shape_radius_y="155"
        app:piv_shape_solid_color="#a0ff0000"

        app:piv_shape_foreground="#A0000000"

        app:srcCompat="@drawable/ic_3d_rotation_black_24dp" />

    <com.stefanosiano.powerfullibraries.imageview.PowerfulImageView
        android:layout_width="280dp"
        android:layout_height="250dp"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        android:padding="10dp"
        android:background="@color/colorPrimary"


        app:piv_shape_inner_padding="0dp"
        app:piv_shape_mode="solid_rounded_rectangle"
        app:piv_shape_background_color="@color/colorPrimaryDark"
        app:piv_shape_border_width="10dp"
        app:piv_shape_border_color="#90000000"
        app:piv_shape_border_overlay="false"
        app:piv_shape_radius_x="180"
        app:piv_shape_radius_y="155"
        app:piv_shape_solid_color="#a0ff0000"

        app:piv_shape_background="@drawable/sf1"
        android:src="@drawable/ic_3d_rotation_black_24dpng" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="250dp"
        android:layout_margin="8dp"
        android:scaleType="centerInside"
        android:padding="10dp"
        android:background="@color/colorPrimary"


        android:src="@drawable/ic_3d_rotation_black_24dpng" />

    <ImageView
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:background="#707070"
        android:layout_margin="8dp"
        android:scaleType="fitXY"
        android:padding="0dp"
        android:src="@android:drawable/btn_star" />

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.stefanosiano.powerfullibraries.imageviewsample.MainActivity">

        <TableRow>

            <com.stefanosiano.powerfullibraries.imageview.PowerfulImageView
                android:layout_width="10dp"
                android:layout_height="35dp"
                android:scaleType="center"
                android:background="#707070"
                android:layout_margin="8dp"
                android:minWidth="0dp"
                android:src="@android:drawable/btn_star"

                app:piv_progress_indeterminate_color="#2040f0"
                app:piv_progress_mode="circular"/>

            <com.stefanosiano.powerfullibraries.imageview.PowerfulImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="fitEnd"
                android:background="#eaeaea"
                android:layout_margin="8dp"
                android:src="@android:drawable/btn_star"


                app:piv_shape_mode="normal"
                app:piv_progress_shadow_border_width="1dp"
                app:piv_progress_shadow_border_color="@color/colorAccent"
                app:piv_progress_mode="circular"
                />

            <com.stefanosiano.powerfullibraries.imageview.PowerfulImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="center"
                android:background="#60ea0aea"
                android:layout_margin="8dp"

                app:piv_progress_shadow_border_width="14dp"
                app:piv_progress_shadow_border_color="@android:color/white"
                app:piv_progress_shadow_color="#000000"
                app:piv_progress_border_width="20dp"
                app:piv_progress_shadow_padding="4dp"
                app:piv_progress_gravity="top_start"
                app:piv_progress_value="30"
                app:piv_progress_mode="horizontal"
                app:piv_progress_front_color="@color/colorAccent"
                app:piv_progress_back_color="@color/colorPrimaryDark"
                app:piv_progress_indeterminate="false"/>

        </TableRow>

        <TableRow>

            <com.stefanosiano.powerfullibraries.imageview.PowerfulImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="center"
                android:background="#eaeaea"
                android:layout_margin="8dp"

                app:piv_progress_gravity="start"
                app:piv_progress_value="30"
                app:piv_progress_mode="circular"/>

            <com.stefanosiano.powerfullibraries.imageview.PowerfulImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="center"
                android:background="#eaeaea"
                android:layout_margin="8dp"

                app:piv_progress_gravity="center"
                app:piv_progress_value="30"
                app:piv_progress_mode="circular"/>

            <com.stefanosiano.powerfullibraries.imageview.PowerfulImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="center"
                android:background="#eaeaea"
                android:layout_margin="8dp"

                app:piv_progress_gravity="end"
                app:piv_progress_value="30"
                app:piv_progress_mode="circular"/>

        </TableRow>

        <TableRow>

            <com.stefanosiano.powerfullibraries.imageview.PowerfulImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="center"
                android:background="#eaeaea"
                android:layout_margin="8dp"

                app:piv_progress_gravity="bottom_start"
                app:piv_progress_value="30"
                app:piv_progress_mode="circular"/>

            <com.stefanosiano.powerfullibraries.imageview.PowerfulImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="center"
                android:background="#eaeaea"
                android:layout_margin="8dp"

                app:piv_progress_gravity="bottom"
                app:piv_progress_value="30"
                app:piv_progress_mode="circular"/>

            <com.stefanosiano.powerfullibraries.imageview.PowerfulImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="center"
                android:background="#eaeaea"
                android:layout_margin="8dp"

                app:piv_progress_gravity="bottom_end"
                app:piv_progress_value="30"
                app:piv_progress_mode="circular"/>

        </TableRow>
    </TableLayout>

</LinearLayout>