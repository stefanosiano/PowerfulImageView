<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#b0b0b0b0">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.stefanosiano.powerfullibraries.imageview.PowerfulImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#eaeaea"
            android:layout_margin="8dp"
            android:src="@drawable/sf1"
            android:scaleType="centerCrop"

            app:piv_blur_mode="box5x5"
            app:piv_blur_radius="1"

            app:piv_shape_mode="circle"

            app:piv_progress_removed_on_change="true"
            app:piv_progress_indeterminate="false"
            app:piv_progress_size="50%"
            app:piv_progress_front_color="@color/colorAccent"
            app:piv_progress_border_width="2dp"
            app:piv_progress_mode="circular" />

        <com.stefanosiano.powerfullibraries.imageview.PowerfulImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:background="#eaeaea"
            android:layout_margin="8dp"
            android:src="@drawable/sf1"
            app:piv_progress_mode="circular"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.stefanosiano.powerfullibraries.imageview.PowerfulImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_margin="8dp"
            app:piv_shape_ratio="1.6"
            app:piv_shape_mode="solid_rounded_rectangle"
            app:piv_shape_radius_x="100"
            app:piv_shape_radius_y="100"
            app:piv_shape_border_width="0dp"
            android:padding="0dp"
            app:piv_shape_border_color="@android:color/black"
            android:src="@drawable/sf1" />

        <com.stefanosiano.powerfullibraries.imageview.PowerfulImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:background="#eaeaea"
            android:layout_margin="8dp"
            app:piv_shape_ratio="1.6"
            app:piv_shape_mode="solid_oval"
            app:piv_shape_border_width="1dp"
            app:piv_shape_border_color="@android:color/black"
            android:src="@drawable/sf1" />

    </LinearLayout>


</LinearLayout>
